@model TelefonRehberi.ViewModel.Calisan

<form class="form-horizontal">
    <div class="form-group">
        <label for="ad" class="col-sm-2 control-label">Ad: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ad" value="@Model.CalisanAd" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="soyad" class="col-sm-2 control-label">Soyad: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="soyad" value="@Model.CalisanSoyad" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="telefon" class="col-sm-2 control-label">Telefon: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="telefon" value="@Model.Telefon" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="departman" class="col-sm-2 control-label">Departman: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="departman" value="@Model.Departman" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="yonetici" class="col-sm-2 control-label">Yönetici: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="yonetici" value="@Model.Yonetici" readonly>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("#telefon").mask("(000) 000-0000");
    });
</script>